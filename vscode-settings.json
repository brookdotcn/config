{
  "window.title": "${appName}",
  "window.commandCenter": false,
  "window.titleBarStyle": "native",
  "window.customTitleBarVisibility": "never",

  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": false,
  "workbench.activityBar.location": "top",
  "workbench.layoutControl.enabled": false,
  "workbench.colorTheme": "Noir Poimandres Darker",

  "workbench.colorCustomizations": {
    "tab.border": "#202230",
    "sideBar.border": "#202230",
    "scrollbar.shadow": "#0a0a0a",
    "editor.background": "#12131b",
    "tab.activeBackground": "#12131b",
    "editorGutter.background": "#12131b",
    "activityBarTop.foreground": "#a6accd",
    "activityBarTop.activeBorder": "#12131b",
    "sideBarActivityBarTop.border": "#202230",
    "tab.unfocusedActiveBackground": "#12131b",
    "gitlens.trailingLineForegroundColor": "#a6accd50"
  },

  "editor.fontWeight": "400",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.minimap.enabled": false,
  "editor.fontFamily": "Geist Mono",
  "editor.cursorStyle": "underline",
  "editor.lightbulb.enabled": "off",
  "editor.guides.indentation": false,
  "workbench.tree.renderIndentGuides": "none",
  "editor.stickyScroll.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.hideCursorInOverviewRuler": true,
  "editor.semanticHighlighting.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "breadcrumbs.enabled": false,
  "files.autoSave": "afterDelay",
  "terminal.integrated.fontWeight": "400",

  "errorLens.fontWeight": "400",
  "gitlens.codeLens.enabled": false,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.lens.implementations.enable": false,
  "rust-analyzer.inlayHints.chainingHints.enable": false,
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.inlayHints.closingBraceHints.enable": false,
  "apc.electron": {
    "trafficLightPosition": {
      "x": 7.5,
      "y": 10
    },
    "titleBarStyle": "hiddenInset"
  },
  "apc.stylesheet": {
    ".title-label": "padding-left: 0 !important",
    ".sidebar .composite-bar-container": "padding-left: 70px",
    ".inline-titlebar-placeholder": "padding-left: 0 !important"
  },

  "[mdx]": {
    "editor.formatOnSave": false
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  }
}
